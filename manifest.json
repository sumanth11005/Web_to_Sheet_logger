{
  "manifest_version": 3,
  "name": "Web_to_Sheet_Logger",
  "version": "1.0",
  "description": "A simple Chrome extension with a popup and content script.",
  "permissions": ["activeTab", "https://script.google.com/*"],
  "host_permissions": ["https://script.google.com/*"],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}